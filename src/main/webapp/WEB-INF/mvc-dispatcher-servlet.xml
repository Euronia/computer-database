<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
	
	<bean name="/editComputer.htm"
			class="com.excilys.formation.controller.EditComputerController">
	</bean>
	
	<bean name="/addComputer.htm"
			class="com.excilys.formation.controller.AddComputerController"/>
			
			
	<import resource="classpath:Spring-Module.xml" />
	<bean id="viewResolver"
		class="org.springframework.web.servlet.view.InternalResourceViewResolver" >
		<property name="prefix">
			<value>/WEB-INF/pages/</value>
		</property>
		<property name="suffix">
			<value>.jsp</value>
		</property>
	</bean>	
</beans>